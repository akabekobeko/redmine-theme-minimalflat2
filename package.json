{
  "name": "redmine-theme-minimalflat2",
  "description": "Minimal and flat design theme for Redmine.",
  "version": "1.0.3",
  "author": "akabeko",
  "license": "GPL-2.0",
  "main": "index.js",
  "keywords": [
    "Redmine",
    "Theme",
    "Minimal",
    "Flat"
  ],
  "homepage": "https://github.com/akabekobeko/redmine-theme-minimalflat2#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/akabekobeko/redmine-theme-minimalflat2.git"
  },
  "bugs": {
    "url": "https://github.com/akabekobeko/redmine-theme-minimalflat2/issues"
  },
  "scripts": {
    "start": "npm run watch",
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "stylus ./src/stylus/App.styl -o ./src/stylesheets/application.css -m --sourcemap-root ./stylus",
    "watch:css": "stylus -w ./src/stylus/App.styl -o ./src/stylesheets/application.css -m --sourcemap-root ./stylus",
    "watch:server": "browser-sync start --server src",
    "watch": "npm-run-all -p watch:css watch:server",
    "release:css": "stylus -c ./src/stylus/App.styl -o ./minimalflat2/stylesheets/application.css",
    "release:clean": "rimraf ./minimalflat2",
    "release:copy-src": "cpx \"./src/**/*(|theme.js|application.css|favicon.ico|icon.svg|icon.eot|icon.ttf|icon.woff|!(*.*))\" ./minimalflat2",
    "release:copy-doc": "cpx \"./*(README.md|README.ja.md|LICENSE.txt|ss.png|!(Vagrantfile|*.*))\" ./minimalflat2",
    "release:copy": "npm-run-all release:copy-src release:copy-doc",
    "release:archive": "bestzip minimalflat2-v1.0.3.zip ./minimalflat2",
    "release": "npm-run-all -s release:clean release:copy release:css release:archive"
  },
  "devDependencies": {
    "bestzip": "^1.1.2",
    "browser-sync": "^2.9.11",
    "cpx": "^1.2.1",
    "npm-run-all": "^1.2.12",
    "rimraf": "^2.4.3",
    "stylus": "^0.52.4"
  }
}
